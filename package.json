{
  "name": "hapi-riot",
  "description": "Render Riot.js Components with Vision in your Hapi.js Web Applications!",
  "version": "1.0.2",
  "homepage": "https://github.com/dwyl/hapi-riot",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwyl/hapi-riot"
  },
  "engines": {
    "node": ">=4.2.3"
  },
  "scripts": {
    "quick": "./node_modules/tape/bin/tape ./test/*.test.js | node_modules/tap-spec/bin/cmd.js",
    "test": "istanbul cover ./node_modules/tape/bin/tape ./test/*.test.js  | node_modules/tap-spec/bin/cmd.js",
    "coverage": "istanbul cover ./node_modules/tape/bin/tape ./test/*.test.js && istanbul check-coverage --statements 100 --functions 100 --lines 100 --branches 100",
    "start": "node example/basic/server.js",
    "report": "open coverage/lcov-report/index.html"
  },
  "pre-commit": [
    "coverage"
  ],
  "devDependencies": {
    "decache": "^4.1.0",
    "hapi": "^15.0.3",
    "istanbul": "^0.4.5",
    "pre-commit": "^1.1.3",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "vision": "^4.1.0"
  },
  "license": "MIT",
  "dependencies": {
    "riot": "^2.6.1"
  }
}
